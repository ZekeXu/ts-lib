{
  "name": "ts-lib",
  "version": "1.0.0",
  "description": "desc",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "commit": "git-cz",
    "start": "webpack-dev-server --content-base examples --mode development --config config/webpack.dev.js --hot",
    "build": "rm -rf lib && webpack --mode production --config config/webpack.lib.js",
    "format": "tslint -c tslint.json --fix -p .",
    "format-style": "prettier src/**/*.css src/**/*.scss --write && stylelint src/index.scss --fix",
    "package": "yarn pack --filename lib/ts-lib-1.0.0.tgz",
    "prepublishOnly": "yarn build",
    "release": "standard-version",
    "test": "jest --coverage"
  },
  "keywords": [
    "keywords"
  ],
  "author": "ZekeXu18 <zekexu18@outlook.com>",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/prompt": "^8.0.0",
    "@types/jest": "^24.0.15",
    "commitizen": "^3.1.1",
    "css-loader": "^3.0.0",
    "file-loader": "^4.0.0",
    "fsevents": "^2.0.1",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "prettier": "^1.18.2",
    "sass": "^1.22.1",
    "sass-loader": "^7.1.0",
    "standard-version": "^6.0.1",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.2",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run format",
      "git add"
    ],
    "src/**/*.{css,scss}": [
      "yarn run format-style",
      "git add"
    ],
    "**/*.test.{ts,tsx}": [
      "yarn run test"
    ]
  },
  "standard-version": {
    "changelogHeader": "# Changelog\n\n ts-lib"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  }
}
