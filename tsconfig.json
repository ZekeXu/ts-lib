{
  "compilerOptions": {
    "outDir": "lib",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "es6",
    "lib": [
      "dom",
      "esnext",
    ],
    "target": "es6",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "examples",
    "config",
    "__test__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}